<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.lexecc.wk2014.PlaceBetActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom"
        android:padding="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team 1"
                android:id="@+id/txtTeam1"
                android:layout_weight="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Team 2"
                android:id="@+id/txtTeam2"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:id="@+id/imgTeam1"
                android:scaleType="fitXY"
                android:src="@drawable/algerije"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/txtScoreTeam1"
                android:gravity="right"
                android:layout_weight="1"
                android:inputType="number"
                android:editable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" - "
                android:id="@+id/txtVersus" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/txtScoreTeam2"
                android:gravity="left"
                android:layout_weight="1"
                android:inputType="number"
                android:editable="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:id="@+id/imgTeam2"
                android:scaleType="fitXY"
                android:src="@drawable/algerije"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:paddingBottom="16dp">

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:id="@+id/btnPlaceBet"
                android:layout_gravity="center_horizontal"
                android:onClick="btnAccept_onClick" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
